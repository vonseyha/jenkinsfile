pipeline {
    agent any;
    stages {
        stage('git clone') {
            steps {
                git 'https://github.com/MuyleangIng/react-project.git'
            }
        }
        stage('docker pipeline') {
            steps {
               script {
                    docker.image('node:18.9.1').inside {
                        sh '''
                            npm run build
                        '''
                    }
                    docker.build("muyleangin/react-project:${BUILD_NUMBER}")
                    // docker.withRegistry('docker.io', 'dockerhub') {
                    // def customImage = docker.build("muyleangin/react-project:${BUILD_NUMBER}")

                    // customImage.push()
                    // }
               }
            }
        }
        stage('clean workspace'){
            steps{
                cleanWs()
            }
        }
    }
    post {
        always {
            echo "This is always run."
        }
        success {
            echo "This block runs when the build is succeeded."
        }
        failure {
            echo "This block runs when the build is failed."
        }
    }
}
