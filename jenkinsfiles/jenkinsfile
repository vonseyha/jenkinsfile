pipeline {
    agent any;
    parameters {
        choice(name: "TEST_CHOICE", choices: ["production", "staging", "development"], description: "Samplemulti-choice parameter")
    }
    stages {
        stage('test choice') {
            steps {
                echo "${TEST_CHOICE}"
                script {
                    def gitbranch = "${TEST_CHOICE}"
                    if( gitbranch == "production") {
                        git branch: 'production', url: 'https://github.com/vonseyha/jenkinsfile.git'
                    } else if (gitbranch == "staging") {
                        git branch: 'staging', url: 'https://github.com/vonseyha/jenkinsfile.git'
                    } else {
                        git branch: 'development', url: 'https://github.com/vonseyha/jenkinsfile.git'
                    }

                }
            }
        }
    }
}
