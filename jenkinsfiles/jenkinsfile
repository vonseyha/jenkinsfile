pipeline {
    agent {
        docker {
            image 'node:14'
            args '-u root'
        }
    
    }
    stages {
        stage('git clone ') {
            steps {
                 git 'https://github.com/MuyleangIng/react-project.git'
            }
        }
        stage('test') {
            steps {
                sh '''
                node -v
                '''
            }
        }
        stage('docker pipeline') {
            steps {
                echo 'Building docker image'
            }
        }

    }
}
