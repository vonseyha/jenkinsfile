pipeline {
    agent any;
    stages {
        stage('git clone') {
            steps {
                git 'https://github.com/MuyleangIng/react-project.git'
            }
        }
        stage('docker pipeline') {
            steps {
               script {
                    docker.image('node:18.9.1').inside {
                        sh '''
                            npm install --force
                            npm run build
                        '''
                    }
                    docker.withRegistry('docker.io', 'docker-hub') {
                        def customImage = docker.build("vonseyha/react-project:${BUILD_NUMBER}")

                        customImage.push()
                    }
               }
            }
        }
        stage('clean workspace'){
            steps{
                cleanWs()
            }
        }
    }
}
